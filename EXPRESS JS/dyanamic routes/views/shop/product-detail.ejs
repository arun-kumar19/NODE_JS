<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (Object.keys(prods).length>0) { %>
         
            <div class="grid">
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= prods.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= prods.imageUrl %>"
                                alt="<%= prods.title %>"
                                width="400"
                                height="200">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= prods.price %></h2>
                            <p class="product__description"><%= prods.description %></p>
                            <form action="/cart" method="post">
                                <input type="hidden" name="productId" value="<%= prods.id %>">
                               <p class="product__price"> <button class="btn" type="submit">Add to cart</button></p>
                            </form>
                        </div>
                       
                    </article>
            </div>
        <% } else { %>
            <h1>No Products Found!.Try Again</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>